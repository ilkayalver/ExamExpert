<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExamExpert</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/ExamExpertLayout.css" />
</head>
<body>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <nav id="navbar-top" class="navbar navbar-collapse">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#"><b>Exam Expert</b></a>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1 col-md-1">
            <nav id="navbar-left" class="navbar navbar-collapse">

            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1 col-md-1">
            <nav id="navbar-right" class="navbar navbar-collapse">

            </nav>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="col-lg-4" id="div_AuthenticatedIsTrue">
                    <a class="col-lg-1" href="#" id="LoggedInUserName">@User.Identity.Name</a>
                    <a class="col-lg-1" asp-action="Logout" asp-controller="Account" id="logoutButton">Çıkış Yap</a>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ExamExpert.com - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
